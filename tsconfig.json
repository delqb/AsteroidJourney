{
  "compilerOptions": {
    "moduleResolution": "node",
    "moduleDetection": "force",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "js",
    "baseUrl": "./",
    "paths": {
      //
      // FluidEngine
      //
      "@fluidengine/*": [
        "FluidEngine/src/*"
      ],
      "@fluidlib/*": [
        "FluidEngine/src/lib/*"
      ],
      //
      // AsteroidJourney
      //
      "@asteroid/*": [
        "AsteroidJourney/src/*"
      ]
    }
  },
  "exclude": [
    "temp"
  ]
}